<div class="card">
  <div class="card-body">
    <h3>Ediatar Postagem</h3>
    <button onclick="history.back()">
        <img src="/imagens/voltar.png" alt="voltar" style="width: 25px ">
    </button>
    <form action="/admin/postagem-editada" method="post">
        <input type="hidden" name="id" value="{{postegens._id}}">
    	<label for="titulo">Titulo</label>
    		<input type="text" id="titulo" name="titulo" placeholder="" class="form-control" value="{{postegens.titulo}}" required>
        <label for="descricao">Descriçãoo</label>
            <input type="descricao" id="descricao" name="descricao" placeholder="" class="form-control" value="{{postegens.descricao}}" required> 


    	<label for="conteudo">Conteúdo</label>
            <textarea type="text" id="conteudo" name="conteudo" placeholder="" class="form-control" required>{{postegens.conteudo}}</textarea>


    	<label for="lista">Lista</label>
            <select class="custom-select" id="lista" name="lista">
                {{#each listas}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Não a lista cadastrada</option>
                {{/each}}    
            </select>
    	<button type="submit" class="btn btn-dark mt-3">Ediatar</button>	
        
    </form>
  </div>
</div>
